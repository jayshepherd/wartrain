<dl>
<% columns.each :for => @record do |column| %>
  <% if column.is_a? ActiveScaffold::DataStructures::ActionColumns -%>
    <dt><%= column.label -%></dt>
    <dd><%= render :partial => 'show_columns', :locals => {:columns => column} %></dd>
  <% else -%>
    <dt><%= column.label -%></dt>
    <dd><%= show_column_value(@record, column) -%> &nbsp;</dd>
  <% end -%>
<% end -%>

<% @movie = @record %>
<dt>Enter URL for new poster</dt>
<dd><% form_tag :action => 'update_poster', :method => 'get', :id => params[:id] do %>
	<%= text_field_tag :poster_url, params[:poster_url] %>
	<%= submit_tag "Update Poster", :name => nil %>
<% end %></dd>
</dl>