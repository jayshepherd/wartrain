<h1>Movies</h1>
<br />

<% if params[:page].to_i <= 1 %>
	<% @prev_page = 0 %>
  	<% @next_page = 2 %>
<% else %>
	<% @prev_page = params[:page].to_i - 1 %>
  	<% @next_page = params[:page].to_i + 1 %>
<% end %>

<%= link_to_unless @prev_page == 0,  "Previous", {:controller => 'movies', 
				   :action => params[:action], :page => @prev_page}, 
				  {:class => 'page_links', :TVID => 'PGUP'} %> 
<%= link_to "Next", {:controller => 'movies', :action => params[:action], 
                    :page => @next_page}, {:TVID => 'PGDN', 
	                 :class => 'page_links'} %>

<table>
	<% count = 1 %>
	<% @movies.each do |movie| %>
		<% if count%6 == 1 %><tr><% end %>
		<td><%= link_to image_tag(movie.poster, :border=>0, :size=>'162x246'), 
				movie.url, html_options = movie.html_options %><br />
		<% if count%6 == 0 %></tr><% end %>
		<% count = count + 1%>
	<% end %>
</table>