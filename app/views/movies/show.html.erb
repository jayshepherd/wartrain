<body background="<%= @movie.background %>">
	
<p style="color: green"><%= flash[:notice] %></p>

<table>
	<tr><td class='header' background='/art/backgrounds/shade.png'><h1><%= @movie.title %></h1></td></tr>
	<% 20.times do %>
		<tr><td><br /></td></tr>
	<% end %>
	<tr><td class='footer' background='/art/backgrounds/shade.png'>
		<p><%= @movie.description unless @movie.description.blank? %></p>
	
		<p>
			<%= "Release Date: #{@movie.release_date.to_s} <br />" unless @movie.release_date.blank? %>
			<%= "Running Time: #{@movie.running_time.to_s} minutes <br />" unless @movie.running_time.blank? %>
		</p>
		<p><%= link_to image_tag('play.png', :size => '48x48'), @movie.url, html_options = @movie.html_options %></p>
	</td></tr>
</table>

</body>